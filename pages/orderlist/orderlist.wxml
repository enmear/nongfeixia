<!--pages/orderlist/orderlist.wxml-->
<view class="order-tabs">
  <view class="tab-item  {{currentOrderTab == idx?'order-active':'order-default'}}" wx:for="{{orderTabArray}}" wx:for-index="idx" wx:for-item="itemName" wx:key="itemName" data-current="{{idx}}" bindtap="swichOrderNav">{{itemName}}</view>
</view>
<scroll-view scroll-y="true" class="{{scrollViewStyle}}">
  <view class="index">   
    <view class="kind-list">
      <block wx:for-items="{{orderInfoList}}" wx:key="{{item.order_id}}">
        <view>
          <view id="{{item.order_id}}" class="list-item" bindtap="jumpToOrderDetail" data-index="{{item}}">
            <!-- <view class="kind-list-text">{{item.name}}trgr</view>
          <image class="kind-list-img" src="resources/kind/{{item.id}}.png"></image> -->
            <view class="img-cont">
              <image class='img' src="{{item.image}}"></image>                
            </view>
            <view class="text-cont">
              <view class='title'>{{item.crop}}喷药</view>
              <view class="price text">面积：{{item.work_area}}亩</view>
              <view class="price text">单价：{{item.price}}元/亩</view>
              <view class="time text">时间：{{item.work_date}}</view>
              <view class="ad text">地址：{{item.address}}</view>
               <view class="status status-red">
              <text class='status-text'> {{item.orderStatus}}</text>               
            </view>
            </view>           
          </view>
        </view>          
      </block>
    </view>   
  </view>  
</scroll-view>