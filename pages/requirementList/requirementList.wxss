/* pages/requirementList/requirementList.wxss */
@import "../common/index.wxss";
.scorll-view-cell {
  width: 100%;
}
.order-figure {
  width: 150rpx;
  height: 150rpx;
}

.order-content {
  display: flex;
  width: 200rpx;
  flex-direction: column;
  margin-left: 40rpx;
  font-size: 25rpx;
}

.order-status {
  display: flex;
  font-size: 30rpx;
  color: red;
  margin-left: 150rpx;
  margin-bottom: 100rpx;
}


.list-item{
  display: flex;
  border-bottom:1px solid #f1f1f1;
  padding: 20rpx 20px;
}
.list-item .img-cont{
  flex: 1;
  }
.list-item .img-cont .img{
  border-radius: 4px;
  width: 100%;
  height: 190rpx
}
.list-item .text-cont{
  flex:2;
  display: flex;
  flex-direction: column;
  position: relative;
  margin-left: 20rpx; 
}
  .text-cont .title{
    font-size: 32rpx;
  }
  .text-cont .status{
    position: absolute; 
    right:20rpx;
    font-size: 24rpx ;    
    padding: 2rpx 8rpx;
    border-radius: 3px;
    top:10rpx
  }
  .status-red{
      background: red;
  }
  .status-green{
    background: #00b43c
  }
  .status-orange{
    background: #f60
  }
   .text-cont .status .status-text{
     color: #fff
   }
  .text-cont  .text{
    font-size: 20rpx;
    margin-top: 6rpx;
    color: #93999f;

  }
  .kind-list-item{
    margin-bottom:0;
  }